@model List<Dish>

@{
    ViewData["Title"] = "Dishes";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">Chefs</a>
    <a class="navbar-brand" asp-action="Dishes" asp-controller="Home">Dishes</a>
</nav>

<h1>Dishes</h1><br>
<div class="text-center">
    <h4>Take a look at our tasty dishes!</h4><br>
    <a class="btn btn-danger" asp-action="AddDish" asp-controller="Home">Add a Dish</a>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var dish in Model)
            {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
            }
        </tbody>
    </table>
</div>