@model Chef

@{
    ViewData["Title"] = "Adding new dish";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">Chefs</a>
    <a class="navbar-brand" asp-action="Dishes" asp-controller="Home">Dishes</a>
</nav>
<div class="text-center">
    <h2>Add a Chef!</h2>
</div>
<div class="dishes">
    @* <div asp-validation-summary="All"></div> *@
    <form class="col-5" asp-action="CreateChef" asp-controller="Home" method="post">
        <div class="form-group">
            <span class="validation" asp-validation-for="FirstName"></span><br>
            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName">
        </div>
        <div class="form-group">
            <span class="validation" asp-validation-for="LastName"></span><br>
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName">
        </div>
        <div class="form-group">
            <span class="validation" asp-validation-for="Birthday"></span><br>
            <label asp-for="Birthday"></label>
            <input class="form-control" asp-for="Birthday">
        </div>
        <input type="submit" class="btn btn-dark" value="Add Chef">
    </form>
</div>
