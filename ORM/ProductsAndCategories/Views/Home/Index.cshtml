@model Product

@{
    ViewData["Title"] = "Products";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">Products</a>
    <a class="navbar-brand" asp-action="Categories" asp-controller="Home">Categories</a>
</nav>

<div class="container">
    <div class="row">
        <div class="col">
            <h2>New product</h2>
            <form class="col-5" asp-action="CreateProduct" asp-controller="Home" method="post">
                <div class="form-group">
                    <span class="validation" asp-validation-for="Name"></span><br>
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                </div>
                <div class="form-group">
                    <span class="validation" asp-validation-for="Description"></span><br>
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <span class="validation" asp-validation-for="Price"></span><br>
                    <label asp-for="Price"></label>
                    <input type="number" min="0" asp-for="Price">
                </div>
                <input type="submit" class="btn btn-danger" value="Create">
            </form>
        </div>
        <div class="col">
            <h2>Existing Products</h2>
            <ul class="list-group list-group-flush">
                @foreach(var product in @ViewBag.ExistingProducts)
                {
                    <li class="list-group-item"><a asp-action="ProductInfo" asp-route-productId="@product.ProductId" asp-controller="Home">@product.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>
