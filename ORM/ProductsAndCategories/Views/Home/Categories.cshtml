@model Category

@{
    ViewData["Title"] = "Categories";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">Products</a>
    <a class="navbar-brand" asp-action="Categories" asp-controller="Home">Categories</a>
</nav>

<div class="container">
    <div class="row">
        <div class="col">
            <h2>New Category</h2>
            <form class="col-5" asp-action="CreateCategory" asp-controller="Home" method="post">
                <div class="form-group">
                    <span class="validation" asp-validation-for="Name"></span><br>
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                </div>
                <input type="submit" class="btn btn-danger" value="Create">
            </form>
        </div>
        <div class="col">
            <h2>Existing Categories</h2>
            <ul class="list-group list-group-flush">
                @foreach(var category in @ViewBag.ExistingCategories)
                {
                    <li class="list-group-item"><a asp-action="CategoryInfo" asp-route-categoryId="@category.CategoryId" asp-controller="Home">@category.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>
