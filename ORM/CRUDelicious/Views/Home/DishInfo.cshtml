@model Dish

@{
    ViewData["Title"] = "Dish info";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Home</a>
    <a class="navbar-brand" href="/new">Add a Dish</a>
</nav>

<div class="text-center">
    <h1>@Model.Name</h1>
    <h3>@Model.Chef</h3>
    <div class="dishes"></div>
    <p>@Model.Description</p>
    <p style="font-weight: bold;">Calories: @Model.Calories</p>
    <p style="font-weight: bold;">Tastiness: @Model.Tastiness</p>
    <a class="btn btn-danger" asp-route-dishId="@Model.DishId" asp-action="Delete" asp-controller="Home">Delete</a>
    <a class="btn btn-dark" asp-route-dishId="@Model.DishId" asp-action="Edit" asp-controller="Home">Edit</a>
</div>