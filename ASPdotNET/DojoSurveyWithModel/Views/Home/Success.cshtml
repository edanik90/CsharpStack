<body>
    <h1>Dojo Survey Results</h1>
    <p>Name: @ViewBag.Name</p>
    <p>Dojo Location: @ViewBag.Location</p>
    <p>Favorite Language: @ViewBag.Language</p>
    @if(ViewBag.Comment != null)
    {
        <p>Comments: @ViewBag.Comment</p>
    }
    else
    {
        <p>@ViewBag.Name has no comments</p>
    }
</body>