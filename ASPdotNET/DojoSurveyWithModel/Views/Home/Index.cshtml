@model Dojo

@{
    ViewData["Title"] = "Home Page";
}


<h1>Dojo Survey</h1>
<form asp-action="Create" asp-controller="Home" method="post">
    <label asp-for="Name"></label><br>
    <input asp-for="Name">
    <span asp-validation-for="Name"></span><br>

    <label asp-for="Location"></label><br>
    <select asp-for="Location">
        <option value=""></option>
        <option value="Chicago">Chicago</option>
        <option value="Seattle">Seattle</option>
        <option value="Dallas">Dallas</option>
        <option value="Burbank">Burbank</option>
    </select>
    <span asp-validation-for="Location"></span><br>

    <label asp-for="Language"></label><br>
    <select asp-for="Language">
        <option value=""></option>
        <option value="Python">Python</option>
        <option value="C#">C#</option>
        <option value="JavaScript">JavaScript</option>
        <option value="HTML">HTML</option>
    </select>
    <span asp-validation-for="Language"></span><br>

    <label asp-for="Comment"></label><br>
    <textarea name="Comment" cols="30" rows="10"></textarea>
    <span asp-validation-for="Comment"></span><br>

    <input type="submit" value="SUBMIT">
    
</form>