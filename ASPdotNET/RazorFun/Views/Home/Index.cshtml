<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Razor Fun</title>
</head>
<body>
@{
    string[] arr = 
    {
        "Apple Pie",
        "Dorritos",
        "Burritos",
        "Cakes",
        "Donuts",
        "corn chips"
    };

    foreach(string item in arr)
    {
        if(item[0] == 'c' || item[0] == 'C')
        {
            <p style="color:red;">@item</p>
        }
        <p>@item</p>
    }
}
</body>
</html>